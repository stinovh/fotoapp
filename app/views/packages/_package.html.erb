<% if @package.nil? %>
  <h1>No product at the moment, come back soon for new products!</h1>
  <h2>Next product: <span id="time_till_next"><%= time_till_next %></span> </h2>
<% else %>
  <h1 id="current-price"><%= @package.current_price %></h1>
  <h1><%= @package.name %></h1>
  <p><%= @package.description %></p>
  <h4>Until <%= @package.end_time %></h4>
  <p>
    <%= link_to new_package_order_path(@package) do %>
      <% if @package.reserved %>
        <button type="button" class="btn btn-primary" disabled id="btn-buy">Buy</button>
      <% else %>
        <button type="button" class="btn btn-primary" id="btn-buy">Buy</button>
      <% end %>
    <% end %>
  </p>
<% end %>
